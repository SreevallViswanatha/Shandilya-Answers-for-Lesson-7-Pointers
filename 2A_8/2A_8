// Write a program in C to print a string in reverse using a pointer.
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
void reverse(char []);
int main()
{
    char str[1000];
    printf("Enter a string:");
    scanf("%s", str);
    reverse(str);
    printf("%s", str);
}
void reverse(char str[1000])
{
    strrev(str);
}
