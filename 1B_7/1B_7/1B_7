// WAP to find the maximum number between two numbers using a pointer.
#include <stdio.h>
#include <stdlib.h>
int main()
{
    int a, b, *bigger;
    printf("Enter a number:");
    scanf("%d", &a);
    printf("Enter another number:");
    scanf("%d", &b);
    if(a>b)
        bigger=&a;
    else
        bigger=&b;
    printf("The bigger number is:%d", *bigger);
}
