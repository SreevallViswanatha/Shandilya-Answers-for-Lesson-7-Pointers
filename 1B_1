// Pointers to pointers
#include <stdio.h>
#include <stdlib.h>
int main()
{
    int i=3, *j, **k, ***l, ****m;
    j=&i;
    k=&j;
    l=&k;
    m=&l;
    printf("Value of i:%d\n", *j);
    printf("Address of i:%d\n", j);
    printf("Address of j:%d\n", &j);
    printf("Value of i:%d\n", **k);
    printf("Address of i:%d\n", *k);
    printf("Address of j:%d\n", k);
    printf("Address of k:%d\n", &k);
    printf("Value of i:%d\n", ***l);
    printf("Address of i:%d\n", **l);
    printf("Address of j:%d\n", *l);
    printf("Address of k:%d\n", l);
    printf("Address of l:%d\n", &l);
    printf("Value of i:%d\n", ****m);
    printf("Address of i:%d\n", ***m);
    printf("Address of j:%d\n", **m);
    printf("Address of k:%d\n", *m);
    printf("Address of l:%d\n", m);
    printf("Address of m:%d", &m);
}
