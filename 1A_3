// Write a C function to evaluate the series: See page 171 of textbook. up to 10 terms.
#include<stdio.h>
#include<math.h>
void factorial(int *);
int main()
{
    double x,ax,sin_x=0, temp;
    int i, sign=-1;
    printf("Enter x: ");
    scanf("%lf", &x);
    ax=x;
    x = x*(3.14159/180);
    for(i=1;i<=19;i=i+2)
    {
        sign = -sign;
        factorial(&i);
        temp = sign*pow(x,i)/i;
        sin_x = temp + sin_x;
    }
    printf("Sin(%.2lf) %lf\n", ax,sin_x);
    printf("%lf", sin(x));
}
void factorial(int *n)
{
    int i,fact=1;
    for(i=1;i<=*n;i++)
    {
        fact=fact*i;
    }
    n=&fact;
}
